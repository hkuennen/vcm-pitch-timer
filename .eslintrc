{
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["solid"],
  "extends": ["eslint:recommended", "plugin:solid/recommended", "prettier"],
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "off",
    "solid/jsx-no-undef": "error"
  },
  "env": {
    "browser": true,
    "es2024": true
  }
}
